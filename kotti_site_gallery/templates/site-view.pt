<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="kotti_site_gallery"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">
  <article metal:fill-slot="content" class="site-view content">
    <h1>${api.context.title}</h1>
    <p class="description">
      ${api.context.description}
    </p>
    ${structure: api.context.url}
    ${structure: api.context.body}
    <div class="site-pictures" tal:define="site_pictures api.context.get_pictures()" tal:condition="site_pictures">
      <div class="site-picture" tal:repeat="picture site_pictures">
        <div class="site-picture-image">
          <a href="${api.url(picture)}"><img src="${api.url(picture, '@@thumbnail-view')}"/></a>
        </div>
        <div class="site-picture-caption">${picture.title}</div>
      </div>
    </div>
  </article>
</html>
